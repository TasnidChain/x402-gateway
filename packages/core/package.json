{
  "name": "@x402/core",
  "version": "0.1.0",
  "description": "Core utilities for x402 paywall - types, receipts, protocol helpers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "jose": "^5.6.0"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "x402",
    "paywall",
    "micropayments",
    "usdc",
    "base",
    "coinbase"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x402/paywall.git",
    "directory": "packages/core"
  }
}
