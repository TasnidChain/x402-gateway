{
  "name": "@x402/facilitator",
  "version": "0.1.0",
  "description": "x402 facilitator server - processes USDC micropayments on Base",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "x402-facilitator": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@x402/core": "workspace:*",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "x402",
    "facilitator",
    "micropayments",
    "usdc",
    "base",
    "payment-processing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x402/paywall.git",
    "directory": "packages/facilitator"
  }
}
