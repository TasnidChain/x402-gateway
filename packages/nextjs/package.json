{
  "name": "@x402/nextjs",
  "version": "0.1.0",
  "description": "Next.js middleware and API route wrappers for x402 paywall",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@x402/core": "workspace:*",
    "jose": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": false
    }
  },
  "keywords": [
    "x402",
    "paywall",
    "nextjs",
    "middleware",
    "micropayments"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x402/paywall.git",
    "directory": "packages/nextjs"
  }
}
